<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E91E63"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Projeto Robo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:text="@string/hello" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="70dp"
        android:layout_height="66dp"
        android:layout_x="26dp"
        android:layout_y="101dp"
        android:src="@drawable/teclacima"
        android:tint="#D81B60" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="70dp"
        android:layout_height="66dp"
        android:layout_x="27dp"
        android:layout_y="197dp"
        android:src="@drawable/teclabaixo"
        android:tint="#E91E63" />

    <ImageButton
        android:id="@+id/left"
        android:layout_width="66dp"
        android:layout_height="70dp"
        android:layout_x="174dp"
        android:layout_y="118dp"
        android:longClickable="false"
        android:src="@drawable/teclaesquerda"
        android:tint="#E91E63" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="66dp"
        android:layout_height="70dp"
        android:layout_x="297dp"
        android:layout_y="121dp"
        android:src="@drawable/tecladireita"
        android:tint="#E91E63" />

</AbsoluteLayout>
